<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:font="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ui.CircleImageView
            android:id="@+id/imageView7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/logo_bp_batam"
            android:layout_margin="@dimen/space_5" />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_5">

                <ui.CustomtextView
                    font:name="Avenir_Heavy"
                    font:type ="bold"
                    android:id="@+id/text_Name"
                    android:textColor="@color/blu3"
                    android:text="Bpk Budi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <ui.CustomtextView
                    font:name="Label"
                    android:id="@+id/text_time"
                    android:gravity="right"
                    android:text="10:49 AM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/space_5" />

                <ImageView
                    android:layout_width="@dimen/space_20"
                    android:layout_height="@dimen/space_20"
                    android:id="@+id/imageView13"
                    android:src="@drawable/gns_clock"
                    android:layout_alignBottom="@+id/text_Name"
                    android:layout_toLeftOf="@+id/text_time"
                    android:layout_toStartOf="@+id/text_time"
                    android:foregroundGravity="fill_vertical" />

            </RelativeLayout>

            <ui.CustomtextView
                font:name="Label"
                android:textColor="@color/black"
                android:id="@+id/text_Description"
                android:text="Surat persuratan permohonan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <RelativeLayout
                android:id="@+id/layout_attachment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorListItem"
                android:layout_below="@+id/text_Date"
                android:layout_alignRight="@+id/text_time"
                android:layout_alignEnd="@+id/text_time"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginTop="@dimen/space_5">

                <ui.CustomtextView
                    font:name="Label"
                    android:id="@+id/lbl_attach"
                    android:text="Attachemnt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_alignTop="@+id/imageView6"
                    android:layout_toRightOf="@+id/imageView6"
                    android:layout_toEndOf="@+id/imageView6" />

                <ui.CustomtextView
                    font:name="Avenir_LightOblique"
                    android:id="@+id/lbl_size"
                    android:text="Attachemnt asdas asdas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lbl_attach"
                    android:textStyle="italic"
                    android:maxLines="1"
                    android:layout_alignBottom="@+id/imageView6"
                    android:layout_toRightOf="@+id/imageView6"
                    android:layout_toEndOf="@+id/imageView6" />

                <ImageView
                    android:layout_width="@dimen/space_40"
                    android:layout_height="@dimen/space_40"
                    android:id="@+id/imageView6"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/pdf"
                    android:layout_marginTop="@dimen/space_5"
                    android:layout_marginBottom="@dimen/space_5" />


            </RelativeLayout>

            <ui.CustomtextView
                android:id="@+id/btnDownload"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_25"
                android:background="@drawable/btn_shape_stgh"
                android:gravity="center"
                android:text="DOWNLOAD"
                android:textColor="#ffffff"
                android:textSize="@dimen/space_12"
                font:name="Label"
                android:layout_weight="1"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="@dimen/space_5"
                android:layout_marginRight="@dimen/space_10" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>