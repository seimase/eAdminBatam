<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/shape_nav_menu_selector_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ui.CustomtextView
        font:name = "GOTHAM_LIGHT"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView"
        android:layout_marginTop="@dimen/space_14"
        android:layout_marginLeft="@dimen/space_30"
        android:layout_marginBottom="@dimen/space_14" />

    <ui.CustomtextView
        font:name = "GOTHAM_BLACK"

        android:layout_width="@dimen/space_40"
        android:layout_height="wrap_content"
        android:text="123"
        android:textSize="@dimen/space_11"
        android:id="@+id/textStatus1"
        android:background="@drawable/btn_shape_all_transparant"
        android:layout_marginTop="@dimen/space_14"

        android:layout_marginBottom="@dimen/space_14"
        android:layout_marginLeft="@dimen/space_10"
        android:gravity="center" />

    <ui.CustomtextView
        font:name = "GOTHAM_BLACK"
        android:layout_width="@dimen/space_40"
        android:layout_height="wrap_content"
        android:text="123"
        android:textSize="@dimen/space_11"
        android:textColor="@color/white"
        android:id="@+id/textStatus2"
        android:background="@drawable/btn_shape_all_red"
        android:layout_marginTop="@dimen/space_14"
        android:layout_marginBottom="@dimen/space_14"
        android:layout_marginLeft="@dimen/space_3"
        android:gravity="center" />


</LinearLayout>