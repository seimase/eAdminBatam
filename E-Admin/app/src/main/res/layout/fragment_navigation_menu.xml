<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorSelectButton">


    <ui.CustomtextView
        font:name = "Header_Reguler"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tVVersion"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:layout_marginBottom="@dimen/space_10" />

    <ui.CustomtextView
        font:name= "Header_Reguler"
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tVVersion"
        android:layout_marginRight="@dimen/space_10" />


    <ExpandableListView
        android:id="@+id/lvExp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@+id/relativeLayout"
        android:layout_above="@+id/tVVersion"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginBottom="@dimen/space_5"
        android:groupIndicator="@android:color/transparent"
        android:cacheColorHint="#00000000"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_80"
        android:id="@+id/relativeLayout"
        android:background="@color/navigationDrawerBackgroundDetail"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignTop="@+id/circleView"
            android:layout_toEndOf="@+id/circleView"
            android:layout_alignBottom="@+id/circleView"
            android:layout_marginTop="@dimen/space_22"
            android:layout_toRightOf="@+id/circleView"
            android:layout_marginLeft="@dimen/space_10">

            <ui.CustomtextView
                font:name= "GOTHAM_BLACK"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setia Nugraha"

                android:textSize="12sp"
                android:textStyle="bold" />

            <ui.CustomtextView
                font:name= "GOTHAM_LIGHT"
                font:type = "bold"
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_3"
                android:text="Division Staff"
                android:textSize="12sp"
                android:textStyle="normal"
                android:layout_marginRight="@dimen/space_10" />


        </LinearLayout>

        <ui.CircleImageView
            android:id="@+id/circleView"
            android:layout_height="match_parent"
            android:src="@drawable/logo_bp_batam"
            android:layout_alignParentTop="true"

            android:layout_marginLeft="10dp"
            android:layout_width="@dimen/space_60" />

        <View
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/grey_xxl"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</RelativeLayout>