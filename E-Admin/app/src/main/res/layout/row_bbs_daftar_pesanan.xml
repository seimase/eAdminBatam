<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:font="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ui.CircleImageView
            android:id="@+id/imageView7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/logo_bp_batam"
            android:layout_margin="@dimen/space_5" />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_5">

                <ui.CustomtextView
                    font:name="GOTHAM_BLACK"
                    android:id="@+id/text_Name"
                    android:textColor="@color/blu3"
                    android:text="Bpk Budi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <ui.CustomtextView
                font:name="GOTHAM_LIGHT"
                android:textSize="@dimen/space_12"
                android:id="@+id/text_Date"
                android:text="Senin, 29 Agustus 2016, pukul 02:02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <RelativeLayout
                android:id="@+id/layout_attachment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorListItem"
                android:layout_below="@+id/text_Date"
                android:layout_alignRight="@+id/text_time"
                android:layout_alignEnd="@+id/text_time"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginTop="@dimen/space_5">

                <ui.CustomtextView
                    font:name="GOTHAM_LIGHTITALIC"
                    android:id="@+id/lbl_attach1"
                    android:textSize="@dimen/space_12"
                    android:text="Attachments :"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textStyle="italic"
                    android:layout_marginTop="@dimen/space_3"
                    android:layout_marginLeft="@dimen/space_7"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <ui.CustomtextView
                    font:name="GOTHAM_LIGHTITALIC"
                    android:id="@+id/lbl_attach"
                    android:textSize="@dimen/space_12"
                    android:text="Attachemnt asdas asdas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:maxLines="1"
                    android:layout_marginLeft="@dimen/space_5"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/imageView6"
                    android:layout_toRightOf="@+id/imageView6"
                    android:layout_toEndOf="@+id/imageView6" />

                <ui.CustomtextView
                    font:name="GOTHAM_LIGHTITALIC"
                    android:id="@+id/lbl_size"
                    android:textSize="@dimen/space_12"
                    android:layout_marginLeft="@dimen/space_5"
                    android:text="Attachemnt asdas asdas asd asd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:maxLines="1"
                    android:layout_below="@+id/lbl_attach"
                    android:layout_toRightOf="@+id/imageView6"
                    android:layout_toEndOf="@+id/imageView6"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="@dimen/space_3"/>

                <ImageView
                    android:layout_width="@dimen/space_25"
                    android:layout_height="@dimen/space_30"
                    android:id="@+id/imageView6"
                    android:layout_below="@+id/lbl_attach1"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/space_7"
                    android:layout_marginLeft="@dimen/space_7"
                    android:layout_marginBottom="@dimen/space_7"
                    android:src="@drawable/pdf" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_35"
                android:layout_marginTop="@dimen/space_5">

                <RelativeLayout
                    android:drawableLeft="@drawable/download24"
                    android:id="@+id/btnDownload"
                    android:layout_width="115dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_shape_all_blue"

                    android:gravity="center"
                    android:text="  lihat dokumen  "
                    android:textColor="#ffffff"
                    android:textSize="@dimen/space_12"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="@dimen/space_5"
                    android:layout_marginRight="@dimen/space_10" >
                    <ImageView
                        android:src="@drawable/downloadsave32"
                        android:layout_width="@dimen/space_25"
                        android:layout_height="@dimen/space_25"
                        android:layout_marginRight="@dimen/space_3" />

                    <ui.CustomtextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="lihat dokumen"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/space_10"
                        font:name="GOTHAM_BLACK"

                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>


            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>